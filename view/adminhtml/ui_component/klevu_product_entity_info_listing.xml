<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="namespace" xsi:type="string">klevu_product_entity_info_listing</item>
            <item name="provider"
                  xsi:type="string">klevu_product_entity_info_listing.klevu_product_entity_info_listing_data_source</item>
        </item>
    </argument>

    <settings>
        <spinner>entity_info_columns</spinner>
        <deps>
            <dep>klevu_product_entity_info_listing.klevu_product_entity_info_listing_data_source</dep>
        </deps>
    </settings>

    <dataSource name="klevu_product_entity_info_listing_data_source"
                component="Klevu_IndexingProducts/js/grid/indexing/entity-info/provider">
        <settings>
            <storageConfig>
                <param name="cacheRequests" xsi:type="boolean">false</param>
                <param name="indexField" xsi:type="string">target_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
            <filterUrlParams>
                <param name="target_id">*</param>
            </filterUrlParams>
        </settings>
        <aclResource>Klevu_indexing::indexing</aclResource>
        <dataProvider class="Klevu\IndexingProducts\Ui\Component\Listing\EntityInfoDataProvider"
                      name="klevu_product_entity_info_listing_data_source">
            <settings>
                <requestFieldName>target_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
    </listingToolbar>

    <columns name="entity_info_columns">
        <column name="target_id" sortOrder="20">
            <settings>
                <label translate="true">Target ID</label>
                <visible>false</visible>
            </settings>
        </column>
        <column name="api_key" sortOrder="30">
            <settings>
                <label translate="true">API Key</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="store_code" sortOrder="35">
            <settings>
                <label translate="true">Store Code</label>
            </settings>
        </column>
        <column name="target_parent_id" sortOrder="40">
            <settings>
                <label translate="true">Parent Product ID (if applicable)</label>
            </settings>
        </column>
        <column name="is_discovered" sortOrder="50">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <dataType>select</dataType>
                <label translate="true">Is Discovered</label>
            </settings>
        </column>
        <column name="is_indexable" sortOrder="60">
            <settings>
                <label translate="true">Is Indexable</label>
            </settings>
        </column>
        <column name="assigned_to_website" sortOrder="70">
            <settings>
                <label translate="true">Assigned to Website</label>
            </settings>
        </column>
        <column name="product_status" sortOrder="80">
            <settings>
                <label translate="true">Product Status</label>
            </settings>
        </column>
        <column name="stock_status" sortOrder="90">
            <settings>
                <label translate="true">Stock Status</label>
            </settings>
        </column>
        <column name="is_salable" sortOrder="100">
            <settings>
                <label translate="true">Product is_salable</label>
            </settings>
        </column>
        <column name="is_available" sortOrder="110">
            <settings>
                <label translate="true">Product is_available</label>
            </settings>
        </column>
    </columns>
</listing>
