<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="namespace" xsi:type="string">klevu_product_sync_next_action_listing</item>
            <item name="provider"
                  xsi:type="string">klevu_product_sync_next_action_listing.klevu_product_sync_next_action_listing_data_source</item>
        </item>
    </argument>

    <settings>
        <spinner>next_action_columns</spinner>
        <deps>
            <dep>klevu_product_sync_next_action_listing.klevu_product_sync_next_action_listing_data_source</dep>
        </deps>
    </settings>

    <dataSource name="klevu_product_sync_next_action_listing_data_source"
                component="Klevu_Indexing/js/grid/indexing/history/provider">
        <settings>
            <storageConfig>
                <param name="cacheRequests" xsi:type="boolean">false</param>
                <param name="indexField" xsi:type="string">target_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
            <filterUrlParams>
                <param name="target_id">*</param>
            </filterUrlParams>
        </settings>
        <aclResource>Klevu_indexing::indexing</aclResource>
        <dataProvider class="Klevu\IndexingProducts\Ui\Component\Listing\EntitySyncNextActionDataProvider"
                      name="klevu_product_sync_next_action_listing_data_source">
            <settings>
                <requestFieldName>target_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
    </listingToolbar>

    <columns name="next_action_columns">
        <column name="entity_id" sortOrder="10">
            <settings>
                <label translate="true">ID</label>
                <visible>false</visible>
            </settings>
        </column>
        <column name="target_id" sortOrder="20">
            <settings>
                <label translate="true">Target ID</label>
                <visible>false</visible>
            </settings>
        </column>
        <column name="api_key" sortOrder="30">
            <settings>
                <label translate="true">API Key</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="target_parent_id" sortOrder="40">
            <settings>
                <label translate="true">Parent Product ID (if applicable)</label>
            </settings>
        </column>
        <column name="is_indexable" sortOrder="50" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <dataType>select</dataType>
                <label translate="true">Is Indexable</label>
            </settings>
        </column>
        <column name="next_action" sortOrder="60">
            <settings>
                <options class="Klevu\IndexingApi\Model\Source\ActionsSource"/>
                <dataType>select</dataType>
                <label translate="true">Action in Next Sync</label>
            </settings>
        </column>
        <column name="last_action" sortOrder="70">
            <settings>
                <options class="Klevu\IndexingApi\Model\Source\ActionsSource"/>
                <dataType>select</dataType>
                <label translate="true">Action in Previous Sync</label>
                <visible>false</visible>
            </settings>
        </column>
    </columns>
</listing>
